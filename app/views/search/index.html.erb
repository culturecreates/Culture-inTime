<div class="ui raised segment">
  <h1 class="ui header"><%= params[:query] %> <%= ' - ' if params[:query].present? %> <%= @productions.count %> <%= t("results")%></h1>  
  <div class="ui divider"></div>

  <%= will_paginate @productions, renderer: WillPaginateSemanticUi::ActionView::Renderer %>

  <div class="ui divided link items">
    <% @productions.each do |production| %>
      <a class="item" href="<%= production_path(production) %>">
        <div class="small image">
          <img src="<%= production_image(production) %>">
        </div>
        <div class="content">
          <div class="header"><%= production.label %></div>
          <div class="meta">
            <span><%= date_display(production.date_entity) %></span>
          </div>
          <div class="description">
            <p><%= truncate strip_tags(production.description), length: 250, seperator: /\w+/ %></p>
          </div>
          <div class="extra">
            <div class="ui label"><i class="green arrow alternate circle down outline icon"></i> <%=production.location_label %> </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>

  <%= will_paginate @productions, renderer: WillPaginateSemanticUi::ActionView::Renderer %>

</div>