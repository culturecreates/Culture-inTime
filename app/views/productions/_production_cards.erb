
<div class="ui link cards app-cards">
  <% production_list.each do |production| %>
    <a class="card" href="<%= productions_show_path %>?uri=<%= production.entity_uri %>">
      <div class="image">
        <img src="<%= production_image(production) %>">
      </div>
      <div class="content">
        <div class="header"><%= production.title %></div>
        <div class="meta"><%= date_display(production.date_entity) %></div>
        <div class="description"> <%= truncate(strip_tags(production.description), length: 100, seperator: /\w+/) %></div>
      </div>
      <div class="extra content">
        <span>
          <i class="arrow alternate circle down outline icon"></i> <%= production.location_label %>
        </span>
      </div>
    </a>
  <% end %>
</div>