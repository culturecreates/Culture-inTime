<div class="ui raised segment">
  <h1 class="ui header"><%= params[:query] %> <%= ' - ' if params[:query].present? %> <%= @count %> <%= t("results") %></h1>  
  <div class="ui divider"></div>

  <%= render partial: "pagination" %>

  <div class="ui divided link items">
    <% @entities.each do |entity| %>
      <a class="item" href="<%= productions_show_path %>?uri=<%= entity.entity_uri %><%= layout_param %> ">
        <div class="small image">
          <img src="<%= production_image(entity) %>">
        </div>
        <div class="content">
          <div class="header"><%= entity.title %></div>
          <div class="meta">
            <span><%= date_display(entity.date_entity) %></span>
          </div>
          <div class="description">
            <p><%= truncate strip_tags(entity.description), length: 250, seperator: /\w+/ %></p>
          </div>
          <div class="extra">
            <div class="ui label"><i class="green arrow alternate circle down outline icon"></i> <%=entity.location_label %> </div>
          </div>
        </div>
      </a>
    <% end %>
  </div>
    <%= render partial: "pagination" %>


</div>